{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "src/types/*.d.ts"],
  "exclude": [
    "node_modules",
    "src/__tests__/calendar-service-simple.test.ts",
    "src/__tests__/example-calendar-service.test.ts",
    "src/__tests__/integration/calendar-integration.test.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  }
}